{
  "name": "aperture",
  "version": "0.2.0",
  "description": "AI-powered localized app store screenshot automation for iOS",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "aperture": "dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/cli/index.ts",
    "dev:server": "tsx watch src/server/app.ts",
    "dev:web": "next dev src/web -p 3001",
    "build": "tsc",
    "build:web": "next build src/web",
    "start:web": "next start src/web -p 3001",
    "postbuild": "chmod +x dist/cli/index.js",
    "clean": "rm -rf dist .next",
    "prebuild": "npm run clean",
    "server": "node dist/server/app.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "typecheck": "tsc --noEmit",
    "link": "npm run build && npm link",
    "unlink": "npm unlink -g aperture"
  },
  "keywords": [
    "ios",
    "screenshots",
    "automation",
    "localization",
    "app-store",
    "simulator",
    "ai",
    "mcp"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@types/node": "^20.11.5",
    "better-sqlite3": "^12.6.2",
    "bullmq": "^5.69.2",
    "chalk": "^5.3.0",
    "clsx": "^2.1.1",
    "commander": "^12.0.0",
    "date-fns": "^4.1.0",
    "express": "^5.2.1",
    "inquirer": "^9.2.15",
    "ioredis": "^5.9.3",
    "next": "^16.1.6",
    "openai": "^4.28.0",
    "ora": "^8.0.1",
    "plist": "^3.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sharp": "^0.33.2",
    "tailwind-merge": "^3.4.1",
    "ws": "^8.19.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/inquirer": "^9.0.7",
    "@types/plist": "^3.0.5",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "autoprefixer": "^10.4.24",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
