{
  "name": "aperture",
  "version": "0.2.0",
  "description": "AI-powered localized app store screenshot automation for iOS",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "aperture": "dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/cli/index.ts",
    "build": "tsc",
    "postbuild": "chmod +x dist/cli/index.js",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "typecheck": "tsc --noEmit",
    "link": "npm run build && npm link",
    "unlink": "npm unlink -g aperture"
  },
  "keywords": [
    "ios",
    "screenshots",
    "automation",
    "localization",
    "app-store",
    "simulator",
    "ai",
    "mcp"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@types/node": "^20.11.5",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "inquirer": "^9.2.15",
    "openai": "^4.28.0",
    "ora": "^8.0.1",
    "plist": "^3.1.0",
    "sharp": "^0.33.2",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
